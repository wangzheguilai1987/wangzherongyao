<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raw1499917357"
    tools:context="com.example.com.xiaoniba987.ui.bianji.BianJiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#03A9F4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_quxiao"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="创作"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_shipin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/eeee" />

        <ImageView
            android:id="@+id/image_duanzi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/wwww" />
    </LinearLayout>

</RelativeLayout>
